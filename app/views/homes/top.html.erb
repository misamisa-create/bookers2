<main>
  <div class="cantainer">
    <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
        <h1>
          welcome to
          <i class="fas fa-book">
            <strong>Bookers</strong>
            !!
          </i>
        </h1>
        <p>In<i class="fas fa-book"></i><strong>Bookers</strong>,</p>
        <p>you can share and exchange your opinions,inpressions,and emoitions</p>
        <p>about various books!</p>
        <div class="btn-wrapper col-10 mx-auto">
          <% if user_signed_in? %>
          <div class="row">
            <%= link_to user_path(current_user) do %>
              <i class="btn btn-info btn-sm btn-block mb-3 sign-in" >
                Log in
              </i>
            <% end %>            
          </div>
          <div class="row">
            <%= link_to user_path(current_user) do %>
              <i class="btn btn-success btn-sm btn-block mb-3 sign-up" >
                Sign up
              </i>
            <% end %>  
          </div>
          <% else %>
            <div class="row">
              <a class="btn btn-info btn-sm btn-block mb-3 sign-in" href="/users/sign_in">
                Log in
              </a>
            </div>
            <div class="row">
              <a class="btn btn-success btn-sm btn-block mb-3 sign-up" href="/users/sign_up">
                Sign up
              </a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>






