<div class="container px-5 px-sm-0">
  <div class="row">
    <!--新規投稿用画面は_listファイル-->
    <div class="col-md-3">
      <%= render partial:'books/list',locals:{book:@book,user:@user} %>
    </div>

    <!--投稿された本一覧画面-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thred>
          <tr>
            <th></th>
            <th><strong>Title</strong></th>
            <th><strong>Opinion</strong></th>
          </tr>
        </thred>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <!--ユーザー詳細に飛ぶリンク-->
              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg",size:'40x40' %>
              <!--ここにend-->
            </td>
            <td>
              <%=link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.opinion %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>


