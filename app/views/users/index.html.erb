<div class="container px-5 px-sm-0">
  <div class="row">
    <!--新規投稿用画面は_listファイル-->
    <div class="col-md-3">
      <%= render partial:'books/list',locals:{book:@book,user:current_user} %>
    </div>

    <!--投稿したユーザー一覧画面-->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover">
        <thred>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thred>

        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
               <%= attachment_image_tag user,:profile_image,:fill,40,40,fallback:"no_image.jpg",size:'40x40' %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%=link_to "Show", user_path(user.id) %>
            </td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

