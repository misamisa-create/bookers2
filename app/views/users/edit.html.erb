<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h1>User info</h1>
                <div id="error_explanation" >
                  <% if @user.errors.any? %>
                    <h3 class="text-danger"><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
                    <ul>
                      <% @user.errors.full_messages.each do |message| %>
                        <li class="text-danger">
                        <%= message %>
                      <% end %>
                      </li>
                    </ul>
                  <% end %>
                </div>
            <%= form_with model:@user,local:true do |f| %>
                <div clas="form-group">
                    <label for="inputName">Name</label><br />
                    <%=f.text_field:name,autofocus:true,id:"inputName" %>
                </div>
                <div clas="form-group">
                    <label for="inputImage">Image</label><br />
                    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
                </div>
                <div clas="form-group">
                    <label for="inputIntroduction">Introduction</label><br />
                    <%=f.text_area:introduction,autofocus:true,id:"inputIntroduction" %>
                </div>
                <div clas="form-group">
                    <%= f.submit"Update User",class:"btn btn-secondary" %>
                </div>
            <% end %>

        </div>
    </div>
</div>



