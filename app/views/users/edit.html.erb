<h1>User info</h1>
<%= form_with model:@user,local:true do |f| %>
    <p>Name</p>
    <label for="inputName"></label>
    <%=f.text_field:name,autofocus:true,id:"inputName" %>
    <!--画像新規投稿画面-->
    <%= attachment_image_tag @user,:profile_image,:fill,40,40,fallback:"no_image.jpg",size:'40x40' %>
    <label for="inputImage">ProfileImage</label>
    <%= f.attachment_field :profile_image,placeholder:"プロフィール画像"　%>
    <p>Introduction</p>
    <%= f.submit"Update User" %>
<% end %>