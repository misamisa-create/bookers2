<div class="container">
  <div class="row">
    <h2>Books</h2>
    
    <table class="table table-hover">
      <thred>
        <tr>
          <th></th>
          <th><strong>Title</strong></th>
          <th><strong>Opinion</strong></th>
        </tr>
      </thred>
    
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
            <!--ユーザー詳細に飛ぶリンク-->
            <p>ユーザー画像</p>
            <!--ここにend-->
          </td>
          <td>
            <%=link_to book_path(book.id) do %>
              <p><%= book.title %></p>
            <% end %>
          </td>
          <td>
            <p><%= book.opinion %></p>
          </td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>    
  </div>
</div>


<!--新規投稿用画面は_listファイル-->
<%= render'books/list',book:@book %>

