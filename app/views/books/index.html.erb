<div class="container px-5 px-sm-0">

  <div id="error_explanation" >
    <% if @book.errors.any? %>
      <h3 class="text-danger"><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li class="text-danger">
          <%= message %>
        <% end %>
        </li>
      </ul>
    <% end %>
  </div>

  <div class="row">

    <!--新規投稿用画面は_listファイル-->
    <div class="col-md-3">
      <%= render partial:'books/list',locals:{book:@book,user:current_user} %>
    </div>

    <!--投稿された本一覧画面-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thred>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thred>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <!--ユーザー詳細に飛ぶリンク-->
              <%= attachment_image_tag book.user,:profile_image,:fill,40,40,fallback:"no_image.jpg",size:'40x40' %>
              <!--ここにend-->
            </td>
            <td>
              <%=link_to book_path(book.id) do %>
                <p><%= book.title %></p>
              <% end %>
            </td>
            <td>
              <p><%= book.opinion %></p>
            </td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
