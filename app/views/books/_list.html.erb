<!--新規投稿-->
<h2 class="mt-3">New Book</h2>
<%= form_with model:book,local:true do |f| %>
  <div class="form-group">
    <label for="book-title">Title</label><br />
    <%=f.text_field :title %>
  </div>
  <div class="form-group">
    <label for="book-opinion">Opinion</label>
    <%=f.text_area :opinion %>
  </div>
  <div class="form-group">
    <%=f.submit 'Create Book',class:"btn btn-success" %>

  </div>
<% end %>


