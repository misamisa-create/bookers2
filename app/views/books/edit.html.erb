<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>

        <%= form_with model:@show_book,local:true do |f| %>
            <div clas="form-group">
                <label for="inputTitle">Title</label><br />
                <%=f.text_field:title,autofocus:true,id:"inputTitle" %>
            </div>
            <div clas="form-group">
                <label for="inputOpinion">Opinion</label><br />
                <%=f.text_area:opinion,autofocus:true,id:"inputOpinion" %>
            </div>
            <div clas="form-group">
                <%= f.submit"Update Book",class:"btn btn-success" %>
            </div>
        <% end %>


    </div>
  </div>
</div>