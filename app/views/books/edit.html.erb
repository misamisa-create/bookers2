<div class="container">

  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
        <div id="error_explanation" >
          <% if @show_book.errors.any? %>
            <h3 class="text-danger"><%= @show_book.errors.count %>error prohibited this obj from being saved:</h3>
            <ul>
              <% @show_book.errors.full_messages.each do |message| %>
                <li class="text-danger">
                <%= message %>
              <% end %>
              </li>
            </ul>
          <% end %>
        </div>
        <%= form_with model:@show_book,local:true do |f| %>
            <div clas="form-group">
                <label for="inputTitle">Title</label><br />
                <%=f.text_field:title,autofocus:true,id:"inputTitle" %>
            </div>
            <div clas="form-group">
                <label for="inputOpinion">Opinion</label><br />
                <%=f.text_area:opinion,autofocus:true,id:"inputOpinion" %>
            </div>
            <div clas="form-group">
                <%= f.submit"Update Book",class:"btn btn-success" %>
            </div>
        <% end %>

        <%= link_to "Show",book_path(@show_book) %>
        |
        <%= link_to "Back",books_path %>
    </div>
  </div>
</div>